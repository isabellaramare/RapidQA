<Window x:Class="RapidQA.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"   
        xmlns:zoom="clr-namespace:ImUI.Zoom;assembly=ImUI"
        mc:Ignorable="d"
        Title="Rapid QA" Height="700" Width="1200" MinHeight="500" MinWidth="700">
    <Grid x:Name="GridBackground" Background="Black">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" MinWidth="230"/>
            <ColumnDefinition Width="4*"/>
        </Grid.ColumnDefinitions>

        <Grid x:Name="GridImages" Grid.Column="1">
            <!--Layers-->
            <zoom:ZoomControl x:Name="Zoom" AllowDrop="True" Background="#FF4B4B4B" VerticalAlignment="Top">
                <Grid x:Name="ImageGrid" Background="White">
                    <!--<Canvas x:Name="ImageCanvas">-->
                        <!--<Image x:Name="ZoomImage" VerticalAlignment="Top" HorizontalAlignment="Left" Stretch="None"/>-->
                    <Image RenderOptions.BitmapScalingMode="NearestNeighbor" x:Name="ZoomImage" Source="{Binding ElementName=ImageZoom, Path=Source}" VerticalAlignment="Top" HorizontalAlignment="Left" Stretch="None" SnapsToDevicePixels="False" />
                    <!--</Canvas>-->
                </Grid>
            </zoom:ZoomControl>
            <Border Background="#FF343434" BorderThickness="0" Grid.Column="4" Height="30" HorizontalAlignment="Left" Margin="15,0,0,12" x:Name="border2" VerticalAlignment="Bottom" Width="214" CornerRadius="10" BorderBrush="#FF343434" Grid.Row="1">
                <Grid Width="200">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="76*" />
                        <ColumnDefinition Width="106*" />
                    </Grid.ColumnDefinitions>
                    <Rectangle Height="16" x:Name="imageColorRectangle" Stroke="#FF343434" Width="16" StrokeThickness="0" Fill="Black" Margin="0,7,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" />
                    <Label Content="0" FontSize="9" Foreground="Red" Height="22" HorizontalAlignment="Left" Margin="49,4,0,0" x:Name="imageRedLabel" VerticalAlignment="Top" Width="37" Grid.ColumnSpan="2" />
                    <Label Content="0" FontSize="9" Foreground="Green" Height="22" Margin="81,4,0,0" x:Name="imageGreenLabel" VerticalAlignment="Top" HorizontalAlignment="Left" Width="37" Grid.ColumnSpan="2" />
                    <Label Content="0" FontSize="9" Foreground="#FF0094FF" Height="22" HorizontalAlignment="Left" Margin="30,4,0,0" x:Name="imageBlueLabel" VerticalAlignment="Top" Width="35" Grid.Column="1" />
                    <Label Content="0" FontSize="9" Foreground="White" Height="22" HorizontalAlignment="Left" Margin="77,4,0,0" x:Name="imageLuminanceLabel" VerticalAlignment="Top" Width="38" Grid.Column="1" />
                    <Label Content="L:" FontSize="10" Foreground="White" Height="22" HorizontalAlignment="Left" Margin="63,3,0,0" x:Name="label29" VerticalAlignment="Top" Width="21" FontWeight="Bold" Grid.Column="1" />
                    <Label Content="sRGB:" FontSize="10" Foreground="White" Height="22" Margin="15,3,0,0" x:Name="label30" VerticalAlignment="Top" FontStyle="Normal" FontWeight="Bold" HorizontalAlignment="Left" Width="40" />
                </Grid>
            </Border>
        </Grid>

        <Grid x:Name="GrdMenu" Grid.Column="0" Background="#FF777777">
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition />
                <RowDefinition Height="100"/>
            </Grid.RowDefinitions>
            <StackPanel Grid.Row="0">
                <Label Content="Quality Assurance" Background="#FF202020" Height="50" VerticalContentAlignment="Center" Padding="30,0" FontSize="18" FontWeight="Bold" Foreground="WhiteSmoke"/>
            </StackPanel>
            <ScrollViewer  Grid.Row="1">
                <StackPanel x:Name="sp" Margin="10" Background="White" AllowDrop="True">
                    <!--This is where the Rows go-->                    
                </StackPanel>
            </ScrollViewer>

            <Grid Grid.Row="2" Margin="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid Grid.Column="1">
                    <Button x:Name="BtnAddLayer" HorizontalAlignment="Right" Content="Add Layer" Height="30" VerticalAlignment="Top" MinWidth="80" Margin="0,0,15,0"/>
                    <Button x:Name="BtnComposite" HorizontalAlignment="Right" Content="Save Image" Margin="0,40,15,0" Height="30" VerticalAlignment="Top" MinWidth="80"/>
                </Grid>
                <Grid Grid.Column="0">
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <TextBlock HorizontalAlignment="Center" Grid.Row="0" Text="Background Color:" TextWrapping="Wrap" VerticalAlignment="Top"/>
                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Button x:Name="BtnWhite" Width="20" Height="20" HorizontalAlignment="Center" Grid.Column="0" VerticalAlignment="Top" Background="White"/>
                        <Button x:Name="BtnGray" Width="20" Height="20" HorizontalAlignment="Center" Grid.Column="1" VerticalAlignment="Top" Background="#FF878787"/>
                        <Button x:Name="BtnBlack" Width="20" Height="20" HorizontalAlignment="Center" Grid.Column="2" VerticalAlignment="Top" Background="Black"/>
                    </Grid>
                </Grid>
            </Grid>
        </Grid>
    </Grid>
</Window>
